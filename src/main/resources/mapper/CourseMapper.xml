<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neuedu.exam.dao.CourseMapper">

	

	<insert id="addCourse" parameterType="Course">
		INSERT INTO course_table(course_id, course_name, course_intro)
		VALUES(#{course_id}, #{course_name}, #{course_intro})
	</insert>
	
	<insert id="addTchCrs" parameterType="TeacherCourse">
		INSERT INTO course_teacher_table(course_id, teacher_id)
		VALUES(#{course_id}, #{teacher_id})
	</insert>

</mapper>