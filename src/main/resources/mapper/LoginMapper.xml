<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neuedu.exam.dao.LoginMapper">

	<sql id="mainQuery">
		SELECT user_id id, user_name name, user_password password
		FROM user_table
	</sql>
	
	<select id="teacherLogin" resultType="Teacher" parameterType="User">
		<include refid="mainQuery"/>
		<where>
			user_group = "teacher" AND user_id = #{id} AND user_password = #{password}
		</where>
	</select>
	
</mapper>