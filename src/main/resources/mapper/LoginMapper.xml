<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neuedu.exam.dao.LoginMapper">

	<sql id="mainQuery">
		SELECT user_id, user_name, user_password
		FROM user_table
	</sql>
	
	<select id="queryTeacher" resultType="Teacher" parameterType="String">
		<include refid="mainQuery"/>
		<where>
			user_group = "teacher" AND user_id = #{teacher_id}
		</where>
	</select>
	
	<select id="queryStudent" resultType="Student" parameterType="String">
		<include refid="mainQuery"/>
		<where>
			user_group = "student" AND user_id = #{student_id}
		</where>
	</select>
	
</mapper>